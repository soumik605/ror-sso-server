.flex.justify-center.w-full
	.rounded-lg.border.border-slate-200.bg-white.p-4.pb-10.w-96
		.text-2xl.text-center.font-semibold.pb-8.font-sans Sign up
		= render "devise/shared/error_messages", resource: @user
		= form_for(@user, method: :put, url: wizard_path, class: 'mt-8 space-y-6') do |f|        
			= f.hidden_field :id, value: @user.try(:id)
			.py-2
				%label.py-2.text-xs.text-slate-600{:for => "name"} Name
				= f.text_field :name, autofocus: true, required: true, autocomplete: "name", class: 'appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm'
			.py-2
				%label.py-2.text-xs.text-slate-600{:for => "phone_number"} Phone Number
				= f.number_field :phone_number, autofocus: true, required: true, autocomplete: "phone_number", class: 'appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm'
			.py-2
				%label.py-2.text-xs.text-slate-600{:for => "organization_name"} Organization
				= f.text_field :organization_name, autofocus: true, required: true, autocomplete: "organization_name", class: 'appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm'

			.mt-4
				%button.w-full.text-white.bg-blue-700.hover:bg-blue-800.focus:ring-4.focus:outline-none.focus:ring-blue-300.font-medium.rounded-lg.text-sm.px-5.py-2.5.text-center.dark:bg-blue-600.dark:hover:bg-blue-700.dark:focus:ring-blue-800
